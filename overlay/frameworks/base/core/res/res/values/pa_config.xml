<resources>

    <!-- Enable the option to check proximity sensor when deciding whether to turn the screen on
         NOTE ! - Enable for devices that have a fast response proximity sensor
    -->
    <!-- Proximity check on screen on -->
    <bool name="config_proximityCheckOnWake">true</bool>

    <!-- Proximity check timeout -->
    <integer name="config_proximityCheckTimeout">100</integer>

    <!-- Proximity check on screen on default -->
    <bool name="config_proximityCheckOnWakeEnabledByDefault">false</bool>

    <!-- Keycodes of gestures. If the gesture is not supported set it to 0. -->
    <integer name="config_doubleTapKeyCode">143</integer>

    <!-- Default settings for gestures
            0 - Disabled
            1 - Wake device
            2 - Toggle flashlight
            3 - Toggle airplane mode
            4 - Play/Pause music
            5 - Next music
            6 - Previous music
            7 - Open camera
            8 - Open dialer -->
    <integer name="config_doubleTapDefault">1</integer>

    <!-- Whether to intercept inputs on screen off. -->
    <bool name="config_enableKeyHandler">true</bool>

</resources>
